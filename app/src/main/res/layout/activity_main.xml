<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemacas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#000"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/calculations"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#fff"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginBottom="12dp"
            android:background="#3CFFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="7"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/eight"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="8"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/nine"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="9"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/divide"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg2"
                android:text="รท"
                android:textColor="@color/keypad_text"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="4"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/five"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="5"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/six"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="6"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg2"
                android:text="ร"
                android:textColor="@color/keypad_text"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="1"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="2"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/three"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="3"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/minus"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg2"
                android:text="-"
                android:textColor="@color/keypad_text"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="c"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/zero"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"
                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="0"
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/equal"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg3"
                android:text="="
                android:textColor="@color/keypad_text2"
                android:textSize="27sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/plus"
                android:layout_width="@dimen/keypad_btn_height"
                android:layout_height="@dimen/keypad_btn_height"
                android:layout_margin="1dp"

                android:background="@drawable/circle_gray"
                android:backgroundTint="@color/keypad_bg2"
                android:text="+"
                android:textColor="@color/keypad_text"
                android:textSize="27sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>